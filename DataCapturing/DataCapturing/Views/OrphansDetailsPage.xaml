<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataCapturing.Views.OrphansDetailsPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="First Name:" FontSize="Medium" />
        <Label Text="{Binding FirstName}" FontSize="Small"/>
        <Label Text="Last Name:" FontSize="Medium" />
        <Label Text="{Binding LastName}" FontSize="Small"/>
        <Label Text="Gender:" FontSize="Medium" />
        <Label Text="{Binding Gender}" FontSize="Small"/>
        <Label Text="National Id:" FontSize="Medium" />
        <Label Text="{Binding NationalId}" FontSize="Small"/>
        <Label Text="Phone:" FontSize="Medium" />
        <Label Text="{Binding Phone}" FontSize="Small"/>
        <Label Text="Age:" FontSize="Medium" />
        <Label Text="{Binding Age}" FontSize="Small"/>
        <Label Text="Village:" FontSize="Medium" />
        <Label Text="{Binding Village}" FontSize="Small"/>
        <Label Text="Province:" FontSize="Medium" />
        <Label Text="{Binding Province}" FontSize="Small"/>
    </StackLayout>

</ContentPage>